<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/main1"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            android:id="@+id/imageIconListItemInfo"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:textColor="#000000"
            android:gravity="right"
            android:id="@+id/userNameFirstLastListItemInfo"
            android:layout_toRightOf="@+id/imageIconListItemInfo"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дистанция"
            android:textColor="#9A000000"
            android:textSize="20dp"
            android:layout_alignRight="@+id/userNameFirstLastListItemInfo"
            android:layout_below="@+id/userNameFirstLastListItemInfo"
            android:id="@+id/userDistanceListItemInfo" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userIDinvise"
            android:visibility="gone"
            android:textSize="20dp"
            android:id="@+id/userIdinvise" />
    </RelativeLayout>
</LinearLayout>