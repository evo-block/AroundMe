<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/main1"
        android:padding="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/profile"
            android:id="@+id/imageIconListItemInfo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя"
            android:textColor="#000000"
            android:paddingLeft="8dp"
            android:id="@+id/userNameFirstLastListItemInfo"
            android:layout_toRightOf="@+id/imageIconListItemInfo"
            android:textSize="25dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Добавить"
            android:id="@+id/btnADD"
            android:layout_alignParentTop="true"
            android:background="@drawable/btn_green"

            android:layout_alignStart="@+id/btnCancel"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="Отклонить"
            android:background="@drawable/btn_orange"
            android:id="@+id/btnCancel"
            android:layout_below="@+id/btnADD"
            android:layout_alignParentRight="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userIDinvise"
            android:visibility="gone"
            android:textSize="20dp"
            android:id="@+id/userIdinvise" />
    </RelativeLayout>
